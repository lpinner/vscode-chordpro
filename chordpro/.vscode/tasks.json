    "version": "2.0.0",
    "tasks": [
        {
            "label": "Convert to PDF",
            "type": "shell",
            "command": "chordpro -o \"${fileDirname}/${fileBasenameNoExtension}.pdf\" \"${file}\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
    ]
}
